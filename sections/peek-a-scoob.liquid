<style>
	/* reset */

*, *::before, *::after {
	box-sizing: border-box;
	margin: 0;
	padding: 0;
}



/* main */

.inner_img {
	width: 50%;
	margin: 8rem auto;
	overflow: hidden;
}

.img {
	width: 100%;
	background-position: center center;
	background-repeat: no-repeat;
	background-size: cover;
	&::before {
		content: '';
		display: block;
		padding-top: 56.25%; // 16/9
	}
}

/* images background */

.inner_img:first-of-type > div {

		background-image: url(https://images.unsplash.com/photo-1546964143-15abb18ec50d?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80);
	
}

.inner_img:nth-of-type(2) > div {
	
		background-image: url(https://images.unsplash.com/photo-1544022321-e0f0adb3578a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=675&q=80);

}

.inner_img:last-of-type > div {
	
		background-image: url(https://images.unsplash.com/photo-1487792392560-f8ab749cc299?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80);

}
</style>
<script>
	// scrollmagic init
let ctrl = new ScrollMagic.Controller();

// each image
[].forEach.call(document.querySelectorAll('.inner_img'), function(e) {
	
	// gsap timeline
	let tl = new TimelineMax();
	tl.from(e, 1, { xPercent: -100, ease: Expo.easeInOut }, 0);
	tl.from(e.querySelector('.img'), 1, { xPercent: 100, ease: Expo.easeInOut }, 0);
	
	// scrollmagic scene
	let scene = new ScrollMagic.Scene({ triggerElement: e, triggerHook: .6 })
	.setTween(tl)
	.addTo(ctrl);
	
});
</script>
