{%- assign collection = collections[settings.collection] -%}
<div class="sales-announce-section2" style="background-color:{{ section.settings.background_color }}">

    <div class="main-left">
        {% render 'responsive-image' with section.settings.png_icon %}
    </div>
    <div class="main-right">
        <div class="top-text">
            <p>{{ section.settings.toptext }}</p>
        </div>
        <div class="main-heading">
            <h2>{{ section.settings.heading }}</h2>
        </div>
        <div class="main-subheading">
            <h4>{{ section.settings.subheading }}</h4>
        </div>
        {% comment %} <a class="card-button--{{ section.id }} button" href="{% if collection == empty %}{{ routes.all_products_collection_url }}{% else %}{{ collection.url }}{% endif %}">
            {{ section.settings.btn-text }}
        </a> {% endcomment %}
        <a class="card-button--{{ section.id }} button" href="https://scoobies.co.in/pages/return-gift">
            {{ section.settings.btn-text }}
        </a>
    </div>

</div>



<style>
    .sales-announce-section2{
        display:flex;
        width:100%;
    }
    .main-subheading{
        text-align:center;
    }
    @media screen and (max-width: 768px){
        .sales-announce-section2{
            flex-direction:row;
        }
        .main-left {
            padding: 10px;
        }
        .main-left > .responsive-image-wrapper{
            width:unset;
        }
        .main-heading > h2{
            font-size:{{ section.settings.head-size-mob }}px;
        }
        .main-subheading{

            font-size:{{ section.settings.sub-size-mob }}px;
        }
        
    }
    @media screen and (min-width: 768px){
        .main-left{
            padding: 10px;
        }
        .main-left > .responsive-image-wrapper{
            width:50%;
        }
        .main-heading > h2{
            font-size:{{ section.settings.head-size }}px;
        }
        .main-subheading{
            font-size:{{ section.settings.sub-size }}px;
        }
    }

.main-left,.main-right{

    display:flex;
    align-items:center;
    justify-content:center;
    width:50%

    
}
.main-right{
    flex-direction: column;
}
.main-left > .responsive-image-wrapper{
    height:fit-content;
}
.main-left > .responsive-image-wrapper > img {
    width:100%;
    height:auto;
}
  
.main-heading{
    color:{{ section.settings.head_text_color }};
    margin:{{ section.settings.head-margin }};
    
}
.main-subheading{
    font-size:{{ section.settings.sub-size }}px;
    margin:{{ section.settings.sub-margin }}px;
    color:{{ section.settings.sub_text_color }}
}
.top-text{
    font-size:{{ section.settings.top-size }}px;
    margin:{{ section.settings.top-margin }}px;
    color:{{ section.settings.top_text_color }}
}
.card-button--{{ section.id }} {
    background: {{ section.settings.btn_bg_color }};
    color: {{ section.settings.btn_text_color }};
}


</style>

